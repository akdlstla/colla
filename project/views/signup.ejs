    <style>
        * {
            margin: 0px;
            padding: 0px;
        }

        #title {
            display: flex;
            justify-content: center;
        }

        #select {
            display: flex;
            flex-direction: row;
        }

        #select label {
            width: 95%;
        }

        #redstar {
            color: red;
            width: 5%;
        }

        #form {
            display: flex;
            justify-content: center;
        }

        #form #box {
            display: flex;
            justify-content: center;
            flex-direction: column;
        }

        #formcheck {
            display: flex;
            justify-content: center;
            flex-direction: column;
        }

        #checkbox {
            display: flex;
            justify-content: center;
            flex-direction: column;
        }

        #checkbox div {
            display: flex;
            align-items: center;

        }

        #checkbox span {
            margin-left: 8px;
            color: red;
            cursor: pointer;
        }

        #box input {
            width: 300px;
            height: 50px;
            border-radius: 10px;
            background-color: #ffa7a7;
            color: white;
            border-style: dashed;
            border-color: #e74747;
            font-size: 18px;
        }
    </style>
</head>

