    <div id="title">
        <h3>회원가입</h3>
    </div>
    <div id="form">
        <form>
            <div id="box">
                <div id="select"><label for="name">이름</label><span id="redstar">*</span></div>
                <input type="text" id="name" name="name">
            </div>
            <div id="box">
                <div id="select"><label for="email">이메일</label><span id="redstar">*</span></div>
                <input type="email" id="email" name="email">
            </div>
            <div id="box">
                <div id="select"><label for="password">비밀번호</label><span id="redstar">*</span></div>
                <input type="password" id="password" name="password" placeholder="비밀번호 입력">
            </div>
            <div id="box">
                <div id="select"><label for="confirm">비밀번호 확인</label><span id="redstar">*</span></div>
                <input type="password" id="confirm" name="confirm" placeholder="비밀번호 확인">
            </div>
            <div id="box">
                <div id="select"><label for="group">그룹이름</label><span id="redstar">*</span></div>
                <input type="text" id="group" name="group">
            </div>
            <div id="box">
                <label for="department">부서</label>
                <input type="text" id="department" name="department">
            </div>
    </div>
    </form>
    <form id="checkbox">
        <div id="formcheck">
            <div>
                <input type="checkbox" id="terms" name="terms">
                <label for="terms">[필수] 이용약관</label>
                <span onclick="terms()">보기</span>
            </div>
            <div>
                <input type="checkbox" id="personal" name="personal">
                <label for="personal">[필수] 개인정보 수집 및 이용에 관한 동의</label>
                <span onclick="personal()">보기</span>
            </div>
            <button id="next" type="button" onclick="signup()">다음</button>
        </div>
    </form>
    </div>
