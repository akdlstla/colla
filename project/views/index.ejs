    </footer>

    <script>
        const testimonials = document.querySelectorAll('.testimonial p');
        let currentTestimonialIndex = 0;

        function showNextTestimonial() {
            testimonials[currentTestimonialIndex].classList.remove('active');
            testimonials[currentTestimonialIndex].classList.add('inactive');
            currentTestimonialIndex = (currentTestimonialIndex + 1) % testimonials.length;
            testimonials[currentTestimonialIndex].classList.remove('inactive');
            testimonials[currentTestimonialIndex].classList.add('active');
        }

        setInterval(showNextTestimonial, 3500); // 3.5초마다 후기를 변경
    </script>

